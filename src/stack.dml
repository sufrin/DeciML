{-
        Simple test on the upper bound of recursive calls.
        THis is proportional (on OS/X) to ulimit -s
-}

let bound = ref 0 ;;
let recur x = recur(set bound (prim_succ (get bound))) ;;

set bound 0 >> recur 0;
-- await stack overflow
get bound;

